{{#yield-styles}}
  <link rel="stylesheet" href="/editor.css">
{{/yield-styles}}

{{#yield-content}}
  <div class="header">Welcome {{username}} <a href="#" class="logout">Logout</a></div>
  <div class="panel code_panel">
    <textarea id="code_panel">{{{exercise.code}}}</textarea>
  </div>
  <div class="panel result_panel">
    <div class="test_progress js-toggle-results"></div>
    <div class="tests">
      <textarea id="result_panel">{{{exercise.tests}}}</textarea>
    </div>
    <div class="results"></div>
  </div>
{{/yield-content}}

{{#yield-scripts}}
  <script src="/editor.js"></script>
{{/yield-scripts}}
