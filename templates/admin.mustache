{{#yield-styles}}
  <link rel="stylesheet" href="/editor.css">
  <link rel="stylesheet" href="/admin.css">
{{/yield-styles}}

{{#yield-content}}
  <div class="panel admin_panel">
    <div class="js-user-list user_list">
      {{> admin_user_list }}
    </div>
    <button class="js-change-exercise change_exercise">Change Exercise</button>
  </div>

  <div class="panel code_panel">
    <div id="file_tabs">{{> editor_file_tabs }}</div>
    <textarea id="code_panel"></textarea>
  </div>
  <div class="panel result_panel">
    {{> editor_results_panel }}
  </div>

  <div class="exercise_selector js-exercise-selector hidden">
    <form class="js-exercise-selector-form exercise_selector_form">
      <div class="exercise_list">
        {{#exercises}}
        <input type="radio" name="exercise" id="exercise_list_{{name}}" value="{{name}}">
        <label for="exercise_list_{{name}}">{{name}}</label>
        {{/exercises}}
      </div>
      <div class="exercise_preview">
        <textarea id="preview_panel"></textarea>
      </div>
      <input type="submit" value="Change Current Exercise">
    </form>
  </div>
{{/yield-content}}

{{#yield-scripts}}
  <script>
  var exercises = {{{exercisesJS}}};
  </script>
  <script src="/admin.js"></script>
{{/yield-scripts}}
